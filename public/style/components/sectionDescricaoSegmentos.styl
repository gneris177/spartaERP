.descricacao-de-segmentos {
    display: flex;
    padding: 40px
    justify-content: space-around;

        div {
            width: 45%
            padding: 30px 30px 30px 30px
            border-radius: 8px;
            box-shadow: 0 0 1em rgb(8, 149, 209);
            background: #191919;
            color: #fff;
            text-align center
        }
}

@media(max-width: 1025px) {
    .descricacao-de-segmentos {
        flex-direction: column;
        align-items: center;

        div {
            width: 78%
            margin: 30px;
        }
    }
}

@media(max-width: 600px) {
    .descricacao-de-segmentos {
        div {
            width: 88%
        }
    }
}