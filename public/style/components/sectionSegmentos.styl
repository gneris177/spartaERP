.segmentos {
  padding: 30px;
  background-color:  rgba(15, 15, 15, 0.808);
  color: #fff;
  text-align: center;

    hr {
      margin-top: 30px;
      background-color: rgb(22, 240, 40);
      border:rgb(8, 149, 209);
      height: 2.7px;
    }
}

.segmentos-p1 {
  display: flex;
  justify-content: space-around;

    div {
      font-size: 0.7em;
      padding: 3px
      width: 30%;
      height: 40%;
      border-radius: 10px;
      box-shadow: 8px 5px 5px rgba(0, 0, 0, 0.164);
      background-color: #fff;
      color:  rgb(0, 0, 0);

        img {
          
        }
    }
}

@media(max-width: 840px) {
  .segmentos-p1 {
    flex-direction: column
    align-items: center;
  
      div {
        font-size: 0.8em;
        width: 55%;
        margin: 20px
      }
  }

  .p2 {
    margin-top: -40px;
  }
}

@media(max-width: 600px) {
  .segmentos-p1 {
      div {
        width: 85%;
      }
  }
}