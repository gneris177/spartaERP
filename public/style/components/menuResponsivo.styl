.icon-menu, .icon-close {
    display: none;
}

.menu-responsivo {
    display: none;
    position: absolute;
    right: 2px
    margin-top: 57px;
    padding: 12px
    flex-wrap: wrap;
    background-color: #000; 

    a {
        text-decoration: none;
        color: #fff;
    }

    a:hover {
      color: #3bbbf1ff;
    }

    li {
      list-style-type: none;
    }
}

@media (max-width: 1025px) {
  .icon-menu {
    display: block;
    margin-right: 5px;
  }
}
